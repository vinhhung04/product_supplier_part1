<%- include('../partials/header') %>

<div class="card p-4">
  <h2 class="fw-bold mb-3 text-primary">Edit Supplier</h2>
  <form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label class="form-label">Name</label>
      <input type="text" name="name" value="<%= supplier.name %>" class="form-control" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Address</label>
      <input type="text" name="address" value="<%= supplier.address %>" class="form-control" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Phone</label>
      <input type="text" name="phone" value="<%= supplier.phone %>" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
    <a href="/suppliers" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<%- include('../partials/footer') %>
