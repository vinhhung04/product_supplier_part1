<%- include('../partials/header') %>

<div class="card p-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-primary">Products</h2>
    <a href="/products/new" class="btn btn-success">‚ûï Add Product</a>
  </div>

  <table class="table table-hover align-middle">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Supplier</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(p => { %>
        <tr>
          <td><a href="/products/<%= p._id %>/edit" class="text-decoration-none fw-semibold"><%= p.name %></a></td>
          <td><%= p.price.toLocaleString('vi-VN') %> ‚Ç´</td>
          <td><%= p.quantity %></td>
          <td>
            <% if (p.supplierId) { %>
              <a href="/suppliers/<%= p.supplierId._id %>/edit" class="text-decoration-none"><%= p.supplierId.name %></a>
            <% } else { %>
              <span class="text-muted">N/A</span>
            <% } %>
          </td>
          <td class="text-center">
            <a href="/products/<%= p._id %>/edit" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
            <form method="POST" action="/products/<%= p._id %>?_method=DELETE" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">üóë Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
